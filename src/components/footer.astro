---
import { dictionary } from '@/i18n/dictionary'
import { type Language } from '@/i18n/i18n'
import { APP_NAME } from '@/lib/constants'
import Socials from './socials.astro'

export interface Props {
	lang: Language
}

const t = dictionary[Astro.props.lang]
---

<footer class='w-full'>
	<div
		class='mx-auto flex max-w-3xl flex-col items-center justify-center px-8 pb-32 sm:flex-row-reverse sm:justify-between'
	>
		<Socials />
		<section class='mt-8 text-center sm:mt-0 sm:text-left'>
			<p class='text-xs text-muted-foreground'>
				&copy; {new Date().getFullYear()}{' '}
				<a
					class='hover:text-foreground hover:underline'
					href={`/${Astro.props.lang}`}
				>
					{APP_NAME}
				</a>{' '}
				|{' '}
				<a
					class='hover:text-foreground hover:underline font-bold'
					href={`/${Astro.props.lang}/privacy`}
				>
					{t['privacy?']}
				</a>
			</p>
		</section>
	</div>
</footer>
