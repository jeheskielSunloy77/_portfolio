---
export interface Props {
	href: string
	position?: 'left' | 'right'
	text?: string
	class?: string
}

const { href, position = 'left', text, class: className = '' } = Astro.props
---

<a
	href={href}
	class={`link flex group items-center gap-2 font-light ${className} hover:underline`}
>
	{
		position === 'left' && (
			<span class='group-hover:-translate-x-0.5 transition-transform'>
				<slot />
			</span>
		)
	}
	{text && <span>{text}</span>}
	{
		position === 'right' && (
			<span class='group-hover:translate-x-0.5 transition-transform'>
				<slot />
			</span>
		)
	}
</a>
